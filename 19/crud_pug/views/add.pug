extend layout

block content
    h1 Все курсы Академии

    form(method='post')
        fieldset.form-group
            label(for='name') Name:
            input.form-control(id='name', name='name', type='text', placeholder='Введите имя курса')
            small.text-muted Добавьте свой новый курсы
        button.btn-primary(type='submit') Создать курсы
        a.btn.btn-default(href='/courses') Отмена